{
	"name": "@technomoron/env-loader",
	"version": "1.1.0",
	"description": ".env config loader with validation and defaults",
	"type": "module",
	"main": "./dist/cjs/index.js",
	"module": "./dist/esm/index.js",
	"types": "./dist/esm/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/esm/index.d.ts",
			"import": "./dist/esm/index.js",
			"require": "./dist/cjs/index.js"
		}
	},
	"author": "Bj√∏rn Erk Jacobsen",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/technomoron/env-loader/issues"
	},
	"homepage": "https://github.com/technomoron/env-loader#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/technomoron/env-loader.git"
	},
	"scripts": {
		"build:cjs": "tsc --project tsconfig/tsconfig.cjs.json",
		"build:esm": "tsc --project tsconfig/tsconfig.esm.json",
		"build": "npm run build:cjs && npm run prepare:cjs && npm run build:esm",
		"prepare:cjs": "node ./scripts/prepare-cjs.cjs",
		"test": "vitest run",
		"prepublishOnly": "npm run build",
		"lint": "eslint --no-error-on-unmatched-pattern --ext .js,.cjs,.mjs,.ts,.mts,.tsx,.vue,.json ./",
		"lintfix": "eslint --fix --no-error-on-unmatched-pattern --ext .js,.cjs,.mjs,.ts,.mts,.tsx,.vue,.json ./",
		"format": "npm run lintfix && npm run pretty",
		"cleanbuild": "rm -rf ./dist/ && npm run lintfix && npm run format && npm run build",
		"pretty": "prettier --write \"**/*.{js,jsx,cjs,mjs,ts,tsx,mts,vue,json,md}\"",
		"lintconf": "curl -fsSL https://raw.githubusercontent.com/technomoron/vscode-eslint-defaults/master/install.sh | bash -s -- --no-css --markdown",
		"test:watch": "vitest"
	},
	"devDependencies": {
		"@types/node": "^22.18.1",
		"@typescript-eslint/eslint-plugin": "^8.44.1",
		"@typescript-eslint/parser": "^8.44.1",
		"eslint": "^9.36.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-import": "^2.32.0",
		"jsonc-eslint-parser": "^2.4.1",
		"prettier": "^3.6.2",
		"typescript": "^5.9.2",
		"vitest": "^3.2.4"
	},
	"files": [
		"dist/",
		"package.json",
		"LICENSE",
		"README.md"
	],
	"dependencies": {
		"zod": "^3.25.76"
	}
}
